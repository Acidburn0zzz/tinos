		<dependency org="<%= organization %>" name="<%= organization %>.<%= project_name %>" rev="1.0.0"/>
		<dependency org="<%= organization %>" name="<%= organization %>.bundle_a" rev="1.0.0"/>
		<dependency org="<%= organization %>" name="<%= organization %>.bundle_b" rev="latest.integration"/>
-->
	</dependencies>

</ivy-module>
