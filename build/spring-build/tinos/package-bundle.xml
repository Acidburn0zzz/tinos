<?xml version="1.0" encoding="UTF-8"?>
<project name="package-bundle">


 <target name="package" depends="ivy.init">
  <echo message="package-bundle"/>
  <dist-jar/>
  <src-jar/>
 </target>


 <target name="runtime.bundle.check">
    <condition property="runtime.bundle.dir.exists">
			<available file="${runtime.bundle.dir}" type="dir"/>
	</condition>
 </target>

 <target name="clean-deploy" depends="clean,jar,deploy" />

 <target name="deploy" depends="ivy.init,runtime.bundle.check" if="runtime.bundle.dir.exists">
      <echo message="Copying ${package.jar.output.file} to RunTime directory : ${runtime.bundle.dir}"/>
      <dist-jar output.dir="${runtime.bundle.dir}"/>
 </target>

</project>
