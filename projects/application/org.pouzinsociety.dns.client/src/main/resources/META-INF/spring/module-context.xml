<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-2.5.xsd">
						
	<!-- Start DNS Client -->
	<bean name="dnsClientLauncher" class="org.pouzinsociety.dns.client.DnsClientLauncher">
		<!--  <property name="transportLayer" ref="tcpTransportService"/> -->
		<property name="transportLayer" ref="udpTransportService"/>
	</bean>
	
	      <bean id="methodInvokingTask" class="org.springframework.scheduling.timer.MethodInvokingTimerTaskFactoryBean">
                <property name="targetObject" ref="dnsClientLauncher" />
                <property name="targetMethod" value="timerFired"/>
        </bean>

        <bean id="scheduledTask" class="org.springframework.scheduling.timer.ScheduledTimerTask">
                <property name="delay" value="1000"/>
                <property name="period" value="30000"/>
                <property name="timerTask" ref="methodInvokingTask" />
         </bean>

         <bean id="timerFactory" class="org.springframework.scheduling.timer.TimerFactoryBean">
                <property name="scheduledTimerTasks">
                        <list>
                                <ref local="scheduledTask"/>
                        </list>
                </property>
         </bean>
	
</beans>
