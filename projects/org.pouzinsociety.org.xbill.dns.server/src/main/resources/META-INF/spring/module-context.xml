<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-2.5.xsd">
						
	<!-- Start DNS Server -->
	<bean name="dnsServer" class="org.xbill.DNS.server.DNSServer" init-method="initialize">
		<property name="udpTransportLayer" ref="udpProtocolService"/>
		<property name="tcpTransportLayer" ref="tcpProtocolService"/>
		<property name="stackConfiguration" ref="stackConfigurationService"/>
	</bean>
</beans>
