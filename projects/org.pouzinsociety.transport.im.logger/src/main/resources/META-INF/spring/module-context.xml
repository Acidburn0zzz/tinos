<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-2.5.xsd">

<!--  IM Connections for Logger(s) -->
	<bean id="im-connection-FO" class="org.pouzinsociety.config.dao.IMDao">
		<property name="im_server" value="localhost"/>
		<property name="im_port" value="5222"/>
		<property name="im_buddyId" value="logger"/>
		<property name="im_buddyPassword" value="logger"/>
		<property name="im_resourceId" value="logger-FO"/>
		<property name="im_chatroom" value="fo@conference.localhost"/>		
	</bean>
	<bean id="im-connection-WEB" class="org.pouzinsociety.config.dao.IMDao">
		<property name="im_server" value="localhost"/>
		<property name="im_port" value="5222"/>
		<property name="im_buddyId" value="logger"/>
		<property name="im_buddyPassword" value="logger"/>
		<property name="im_resourceId" value="logger-WEB"/>
		<property name="im_chatroom" value="web@conference.localhost"/>		
	</bean>
	<bean id="im-connection-EMT" class="org.pouzinsociety.config.dao.IMDao">
		<property name="im_server" value="localhost"/>
		<property name="im_port" value="5222"/>
		<property name="im_buddyId" value="logger"/>
		<property name="im_buddyPassword" value="logger"/>
		<property name="im_resourceId" value="logger-EMT"/>
		<property name="im_chatroom" value="emt@conference.localhost"/>		
	</bean>
	<bean id="im-connection-NDR" class="org.pouzinsociety.config.dao.IMDao">
		<property name="im_server" value="localhost"/>
		<property name="im_port" value="5222"/>
		<property name="im_buddyId" value="logger"/>
		<property name="im_buddyPassword" value="logger"/>
		<property name="im_resourceId" value="logger-NDR"/>
		<property name="im_chatroom" value="ndr@conference.localhost"/>		
	</bean>
	<bean id="im-connection-Bootstrap" class="org.pouzinsociety.config.dao.IMDao">
		<property name="im_server" value="localhost"/>
		<property name="im_port" value="5222"/>
		<property name="im_buddyId" value="logger"/>
		<property name="im_buddyPassword" value="logger"/>
		<property name="im_resourceId" value="logger-Bootstrap"/>
		<property name="im_chatroom" value="bootstrap@conference.localhost"/>		
	</bean>

<!--  Dump Dir -->
	<bean id="dumpFileDir" class="java.lang.String">
		<constructor-arg value="/tmp/" />
	</bean>
	
<!--  Loggers -->
	<bean id="logger-FO" class="org.pouzinsociety.transport.im.logger.LoggerBuddy" destroy-method="close">
		<constructor-arg ref="im-connection-FO" />
		<constructor-arg ref="dumpFileDir"/>
	</bean>
	<bean id="logger-WEB" class="org.pouzinsociety.transport.im.logger.LoggerBuddy" destroy-method="close">
		<constructor-arg ref="im-connection-WEB" />
		<constructor-arg ref="dumpFileDir"/>
	</bean>
	<bean id="logger-EMT" class="org.pouzinsociety.transport.im.logger.LoggerBuddy" destroy-method="close">
		<constructor-arg ref="im-connection-EMT" />
		<constructor-arg ref="dumpFileDir"/>
	</bean>
	<bean id="logger-NDR" class="org.pouzinsociety.transport.im.logger.LoggerBuddy" destroy-method="close">
		<constructor-arg ref="im-connection-NDR" />
		<constructor-arg ref="dumpFileDir"/>
	</bean>
	<bean id="logger-Bootstrap" class="org.pouzinsociety.transport.im.logger.LoggerBuddy" destroy-method="close">
		<constructor-arg ref="im-connection-Bootstrap" />
		<constructor-arg ref="dumpFileDir"/>
	</bean>
</beans>
