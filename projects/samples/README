<!--		<property name="header:Web-ContextPath" value="node1"/> -->
	</artifact>
	<artifact type="bundle" name="sample.api" version="[1, 2)"  />
	<artifact type="bundle" name="sample.impl" version="[1, 2)"  />
<!--	<artifact type="bundle" name="sample.snap" version="[1, 2)"  /> -->

