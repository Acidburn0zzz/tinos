$TTL 3600

internal. IN SOA ns1.internal. admin.internal. (
                        5               ; Serial
                        10800           ; Refresh
                        3600            ; Retry
                        604800          ; Expire
                        86400 )         ; Minimum TTL
;
; DNS Servers
;@       IN NS           ns1.internal.
;@       IN NS           ns2.internal.
;
; Machine Names
localhost       IN A    127.0.0.1
ns1             IN A    3.2.1.2
ns2             IN A    3.2.1.3
mail            IN A    3.2.1.10
;@               IN A    3.2.1.30
;
; Aliases
;www             IN CNAME        @

; MX Record
;@               IN MX   10      mail.internal.